/* pages/index/ad.wxss */
.container{
  display: flex;
  flex-direction: column;
}

.home-swiper {
  margin-top: 100rpx;
  width: 95%;
  height: calc(100vw*9/16);
  justify-content: center;
  display: flex;
  flex-direction: column;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.skip{
  position: absolute;
  right: 0px;
  font-weight: bold;
  color: #000;

}
.title{
  text-align: center;
  font-size: x-large;
  font-weight: bolder;
  line-height: 60rpx;
  color: blue;
}
.introduction{
  text-align: center;
  font-size: large;
  font-weight:normal;
  line-height: 100rpx;
  color: yellowgreen;
}
.ad{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}