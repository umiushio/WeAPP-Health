/* pages/chat/chat.wxss */
@import "/Components/chat-record/chat-reord.wxss";
view .nav-bar{
  background-color: skyblue;
}
.nav-bar-title{
  padding-bottom: 30px;
  font-size: xx-large;
  font-weight: bold;
}
.nav-bar-user{
  color: dodgerblue;
  display: flex;
  flex-direction: row;
  font-size: larger;
  font-weight: bold;
}
.title{
  text-align: center;
  color: white;
  background-color: skyblue;
  font-size: xx-large;
  font-weight: bolder;
}
.delete{
  width:40px;
  height: 100%;
  background-color: red;
  color: white;
  text-align: center;
}
.placeTop{
  width:40px;
  height: 100%;
  background-color: grey;
  color: orange;
  text-align: center;
}
.swipe-right{
  display: flex;
  flex-direction: row;
  justify-content: end;
}
.search{
  width: 80%;
}
.search-column{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.friends{
  padding-right: 25rpx;
}