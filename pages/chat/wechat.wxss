/* pages/chat/wechat.wxss */
@import "/Components/chat-frame/chat-left.wxss";
@import "/Components/chat-frame/chat-right.wxss";
view .nav-bar{
  background-color: skyblue;
}
.nav-bar-title{
  padding-bottom: 30px;
  font-size: x-large;
  font-weight: bold;
}
.nav-bar-username{
  font-size: larger;
  font-weight: bold;
  color: dodgerblue;
}
.bottom{
  position: fixed;
  bottom: 0;
  font-size: large !important;
  border: springgreen;
}
.text-area{
  position: fixed;
  bottom:10px; left:10px; width: 70%;
  border-radius: 15px; 
  background-color: gainsboro;
  min-height:40px;
  max-height:100px;
  font-size: large;
  padding: 5px;
  line-height: 10px;
}
.send{
  position: fixed;
  bottom:10px; right:5px; width: 20%
}