/* pages/chat/wechat.wxss */
@import "/Components/chat-frame/chat-left.wxss";
@import "/Components/chat-frame/chat-right.wxss";
view .nav-bar{
  background-color: skyblue;
}
.nav-bar-title{
  padding-bottom: 30px;
  font-size: x-large;
  font-weight: bold;
}
.nav-bar-username{
  font-size: larger;
  font-weight: bold;
  color: dodgerblue;
}
.bottom{
  position: fixed;
  bottom: 0;
  font-size: large !important;
  border: springgreen;
}
.text-area{
  position: fixed;
  bottom:20rpx; left:20rpx; width: 70%;
  border-radius: 30rpx; 
  background-color: gainsboro;
  min-height:55rpx;
  max-height:180rpx;
  font-size: large;
  padding: 20rpx;
  line-height: 25rpx;
}
.send{
  position: fixed;
  bottom:20rpx; right: 0; width: 20%
}